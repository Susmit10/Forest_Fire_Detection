        <!--            android:layout_height="wrap_content"-->
        <!--            android:rating="3.5" />-->

        <TextView
            android:id="@+id/graph_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asbkd asudhlasn saudnas jasdjasl hisajdl asjdlnas" />


    </LinearLayout>


</androidx.cardview.widget.CardView>